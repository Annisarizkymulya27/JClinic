@model User;

@{
    Layout = "_AccountLayout";
}

@{
    if (!string.IsNullOrEmpty(ViewBag.pesan))
    {
        <script>
                alert("@ViewBag.pesan");
        </script>
    }
}



<div class="login_wrapper">
    <div class="animate form login_form">
        <section class="login_content">
            <form>
                <h1>Login Form</h1>
                <div>
                    <input type="text" asp-for="Username" placeholder="Username" required="" />
                </div>
                <div>
                    <input type="password" asp-for="Password" placeholder="Password" required="" />
                </div>
                <div>
                    <a class="btn btn-default submit" asp-controller="Home" asp-action="Index">Log in</a>
                </div>

                <div class="clearfix"></div>
            </form>
        </section>
    </div>
